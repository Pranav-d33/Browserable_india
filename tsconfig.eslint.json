{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": [
    "packages/*/src/**/*",
    "apps/*/src/**/*",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.config.ts",
    "**/*.config.js"
  ],
  "exclude": ["node_modules", "dist", "build"]
}
