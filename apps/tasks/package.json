{
  "name": "@bharat-agents/tasks",
  "version": "1.0.0",
  "description": "Task management API for Bharat Agents",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:e2e": "vitest test/e2e.browser.flow.spec.ts --timeout=60000",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "db:generate": "prisma generate --schema=./src/db/prisma/schema.prisma",
    "db:push": "prisma db push --schema=./src/db/prisma/schema.prisma",
    "db:migrate": "prisma migrate dev --schema=./src/db/prisma/schema.prisma",
    "db:seed": "prisma db seed --schema=./src/db/prisma/schema.prisma",
    "db:studio": "prisma studio --schema=./src/db/prisma/schema.prisma"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.470.0",
    "@bharat-agents/shared": "workspace:*",
    "@google/generative-ai": "^0.21.0",
    "@prisma/client": "^5.7.1",
    "@types/jsonwebtoken": "9.0.10",
    "better-sqlite3": "^9.4.3",
    "bullmq": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "jose": "^5.2.0",
    "jsonwebtoken": "9.0.2",
    "openai": "5.12.2",
    "pino-http": "^10.5.0",
    "prisma": "^5.7.1",
    "prom-client": "^15.1.0",
    "redis": "^4.6.12",
    "supertest": "^6.3.3",
    "tiktoken": "1.0.22",
    "ulid": "^2.3.0",
    "whatwg-url": "^14.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/hpp": "^0.2.3",
    "@types/node": "^20.8.10",
    "@types/supertest": "^2.0.16",
    "@vitest/coverage-v8": "^1.0.4",
    "rimraf": "^5.0.5",
    "tsx": "^4.6.2",
    "typescript": "^5.2.2",
    "vitest": "^1.0.4"
  },
  "prisma": {
    "seed": "tsx src/db/seed.ts"
  }
}
