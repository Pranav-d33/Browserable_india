# =============================================================================
# Local Development Environment Configuration
# =============================================================================
# Copy this file to .env.local and update the values as needed

# Node environment
NODE_ENV=development

# Service configuration
SERVICE_NAME=tasks
PORT=3001

# Database configuration - Use SQLite for local development
USE_SQLITE=true
# POSTGRES_URL=postgresql://user:password@localhost:5432/bharat_agents

# Redis configuration - Use local Redis for development
USE_LOCAL_REDIS=true
# REDIS_URL=redis://localhost:6379

# Storage configuration - Use local file storage for development
USE_LOCAL_STORAGE=true
# S3_ENDPOINT=http://localhost:9000
# S3_ACCESS_KEY=minioadmin
# S3_SECRET_KEY=minioadmin

# Security configuration
JWT_SECRET=your-super-secret-jwt-key-for-local-development-only-min-32-chars

# Logging configuration
LOG_LEVEL=debug
ENABLE_REQUEST_LOGGING=true

# Development-specific settings
ENABLE_HOT_RELOAD=true
ENABLE_DETAILED_ERRORS=true
ENABLE_CORS=true
CORS_ORIGIN=http://localhost:3000

# Rate limiting
RATE_LIMIT_MAX=120

# LLM configuration - Use Gemini for free tier
GEMINI_API_KEY=your_gemini_api_key_here
LLM_PROVIDER=gemini
LLM_MODEL=gemini-pro

# Alternative: OpenAI (requires paid API key)
# OPENAI_API_KEY=your_openai_api_key_here
# LLM_PROVIDER=openai
# LLM_MODEL=gpt-3.5-turbo

# Browser service configuration
BROWSER_SERVICE_URL=http://localhost:3002
ALLOW_EVALUATE=true

# Agent orchestration configuration
ASYNC_JOBS=false
AGENT_NODE_TIMEOUT_MS=30000
AGENT_RUN_TIMEOUT_MS=300000
MAX_LLM_CALLS_PER_RUN=10
MAX_BROWSER_STEPS_PER_RUN=50
AGENT_QUEUE_CONCURRENCY=5
BROWSER_QUEUE_CONCURRENCY=2

# Rate limiting configuration
USER_RATE_LIMIT_PER_MINUTE=120
USER_MAX_CONCURRENT_RUNS=3

# OpenTelemetry configuration (optional)
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
# OTEL_EXPORTER_OTLP_HEADERS=

# Data protection configuration
ENABLE_ARTIFACT_ENCRYPTION=false

# =============================================================================
# Getting Started
# =============================================================================
# 1. Copy this file to .env.local
# 2. Get a free Gemini API key from: https://makersuite.google.com/app/apikey
# 3. Update GEMINI_API_KEY with your key
# 4. Run: pnpm install
# 5. Run: pnpm dev
# =============================================================================
